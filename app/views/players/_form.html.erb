<%= form_with model: player do |f| %>
  <div class="bg-white shadow rounded-lg p-6">
    <div class="grid lg:grid-cols-2 gap-6">
      <div class="border focus-within:border-blue-500 focus-within:text-blue-500 transition-all duration-500 relative rounded p-1">
        <div class="-mt-4 absolute tracking-wider px-1 uppercase text-xs">
          <p>
            <label for="name" class="bg-white text-gray-600 px-1"><%= f.label t(:name) %></label>
          </p>
        </div>
        <p>
          <%= f.text_field :name, autocomplete:"false", tabindex:"0", type:"text", class:"py-1 px-1 text-gray-900 outline-none block h-full w-full" %>
        </p>
      </div>
      <div class="border focus-within:border-blue-500 focus-within:text-blue-500 transition-all duration-500 relative rounded p-1">
        <div class="-mt-4 absolute tracking-wider px-1 uppercase text-xs">
          <p>
            <label for="lastname" class="bg-white text-gray-600 px-1"><%= f.label t(:age) %></label>
          </p>
        </div>
        <p>
          <%= f.text_field :age, autocomplete:"false", tabindex:"0", type:"text", class:"py-1 px-1 text-gray-900 outline-none block h-full w-full" %>
        </p>
      </div>
      <div class="border focus-within:border-blue-500 focus-within:text-blue-500 transition-all duration-500 relative rounded p-1">
        <div class="-mt-4 absolute tracking-wider px-1 uppercase text-xs">
          <p>
            <label for="username" class="bg-white text-gray-600 px-1"><%= f.label t(:height) %></label>
          </p>
        </div>
        <p>
          <%= f.text_field :height, autocomplete:"false", tabindex:"0", type:"text", class:"py-1 px-1 text-gray-900 outline-none block h-full w-full" %>
        </p>
      </div>
      <div class="border focus-within:border-blue-500 focus-within:text-blue-500 transition-all duration-500 relative rounded p-1">
        <div class="-mt-4 absolute tracking-wider px-1 uppercase text-xs">
          <p>
            <label for="password" class="bg-white text-gray-600 px-1"><%= f.label t(:weight) %></label>
          </p>
        </div>
        <p>
          <%= f.text_field :weight, autocomplete:"false", tabindex:"0", type:"text", class:"py-1 px-1 text-gray-900 outline-none block h-full w-full" %>
        </p>
      </div>
      <div class="border focus-within:border-blue-500 focus-within:text-blue-500 transition-all duration-500 relative rounded p-1">
        <div class="-mt-4 absolute tracking-wider px-1 uppercase text-xs">
          <p>
            <label for="password" class="bg-white text-gray-600 px-1"><%= f.label t(:hometown) %></label>
          </p>
        </div>
        <p>
          <%= f.text_field :hometown, autocomplete:"false", tabindex:"0", type:"text", class:"py-1 px-1 text-gray-900 outline-none block h-full w-full" %>
        </p>
      </div>
    </div>
    <div class="border-t mt-6 pt-3">
      <button >
        <%= f.submit t(:new_player), class:"rounded text-gray-100 px-3 py-1 bg-blue-500 hover:shadow-inner hover:bg-blue-700 transition-all duration-300" %>
      </button>
    </div>
  </div>
<% end %>