<%= form_with model: player do |f| %>
  <%= f.label t(:name) %>
  <%= f.text_field :name %>

  <%= f.label t(:age) %>
  <%= f.number_field :age %>

  <%= f.label t(:height) %>
  <%= f.number_field :height %>
  
  <%= f.label t(:weight) %>
  <%= f.number_field :weight %>

  <%= f.label t(:hometown) %>
  <%= f.text_field :hometown %>

  <%= f.submit t(:new_player) %>
<% end %>